#!/bin/bash

set -euo pipefail

URI="${URI:-http://admin:admin@localhost:7990/bitbucket}"

bitbucket-external-hook -b "$URI" -p man -r repo set \
    com.ngs.stash.externalhooks.external-hooks:external-pre-receive-hook \
    -e examples/pre-receive-fail -s 123

bitbucket-external-hook -b "$URI" -p man -r repo enable \
    com.ngs.stash.externalhooks.external-hooks:external-pre-receive-hook
